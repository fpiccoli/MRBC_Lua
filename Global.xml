      <Cell><ProgressBar id="yellow-enemy-m2-percentage" percentage="100"></ProgressBar></Cell>
      <Cell><Text id="yellow-enemy-m2-hp">0/0</Text></Cell>
    </Row>
    <Row preferredHeight="40">
      <Cell><Text id="yellow-enemy-m3-name">M3</Text></Cell>
      <Cell><ProgressBar id="yellow-enemy-m3-percentage" percentage="100"></ProgressBar></Cell>
      <Cell><Text id="yellow-enemy-m3-hp">0/0</Text></Cell>
