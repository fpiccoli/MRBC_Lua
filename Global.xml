      <Cell><Text id="yellow-enemy-cards-value">0/50</Text></Cell>
    </Row>
  </TableLayout>
</Panel>
<Panel id="yellow-set-panel" class="WindowBorder" width="360" height="160" visibility="false" rectAlignment="MiddleCenter" showAnimation="Grow" hideAnimation="Shrink" returnToOriginalPositionWhenReleased="false" allowDragging="true" color="Yellow">
