      <Cell>
        <Dropdown id="m1-hp" onValueChanged="onChangeHP">
          <Option>0</Option><Option>4</Option><Option>5</Option><Option>6</Option><Option>7</Option><Option>8</Option><Option>9</Option><Option>10</Option><Option>11</Option>
