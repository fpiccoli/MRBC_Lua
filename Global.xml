        </Dropdown>
      </Cell>
      <Cell><InputField id="m2-name" onValueChanged="onChangeName">Name</InputField></Cell>
    </Row>
    <Row preferredHeight="30">
      <Cell>
        <Dropdown id="m3-hp" onValueChanged="onChangeHP">
          <Option>0</Option><Option>4</Option><Option>5</Option><Option>6</Option><Option>7</Option><Option>8</Option><Option>9</Option><Option>10</Option><Option>11</Option>
        </Dropdown>
      </Cell>
      <Cell>
        <Dropdown id="m3-percentage" onValueChanged="onChangeColor">
          <Option>White</Option><Option>Blue</Option><Option>Red</Option><Option>Green</Option><Option>Yellow</Option><Option>Orange</Option><Option>Teal</Option><Option>Purple</Option><Option>Pink</Option><Option>Brown</Option><Option>Grey</Option><Option>Black</Option>
        </Dropdown>
      </Cell>
      <Cell><InputField id="m3-name" onValueChanged="onChangeName">Name</InputField></Cell>
    </Row>
    <Row preferredHeight="30">
      <Cell><Text>Team Name</Text></Cell>
      <Cell><InputField id="team-name" onValueChanged="onChangeTeamName">Team Name</InputField></Cell>
    </Row>
  </TableLayout>
</Panel>

