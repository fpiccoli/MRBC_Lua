<!-- Xml UI. See documentation: https://api.tabletopsimulator.com/ui/introUI/ -->
<Defaults>
  <ProgressBar fillImageColor="#FFFFFF" textOutline="#FFFFFF" textColor="#000000" fontStyle="bold" percentageTextFormat="0"/>
  <Button fontStyle="bold" fontSize="20"/>
  <Row dontUseTableRowBackground="true"/>
  <Cell dontUseTableCellBackground="true"/>
  <Text color="black" fontStyle="bold" fontSize="15"/>
</Defaults>

<Panel id="player-yellow" class="WindowBorder" width="260" height="420" offsetXY="0 -250" visibility="Yellow" rectAlignment="MiddleRight" showAnimation="Grow" hideAnimation="Shrink" returnToOriginalPositionWhenReleased="false" allowDragging="true" color="Yellow">
  <TableLayout height="0" width="260" columnWidths="60 100 40 25 25" rectAlignment="MiddleRight" allowDragging="true" returnToOriginalPositionWhenReleased="false" offsetXY="5 0">
    <Row preferredHeight="35">
    <Cell><Button onClick="toggleSet">Set</Button></Cell>
      <Cell><Text id="yellow-team-name">Your Team</Text></Cell>
      <Cell><Text id="yellow-team-guts">0</Text></Cell>
    </Row>
    <Row preferredHeight="40">
      <Cell><Text id="yellow-m1-name">M1</Text></Cell>
      <Cell><ProgressBar id="yellow-m1-percentage" percentage="100"></ProgressBar></Cell>
      <Cell><Text id="yellow-m1-hp">0/0</Text></Cell>
      <Cell><Button onClick="hpDown(m1)">-</Button></Cell>
      <Cell><Button onClick="hpUp(m1)">+</Button></Cell>
    </Row>
    <Row preferredHeight="40">
      <Cell><Text id="yellow-m2-name">M2</Text></Cell>
      <Cell><ProgressBar id="yellow-m2-percentage" percentage="100"></ProgressBar></Cell>
      <Cell><Text id="yellow-m2-hp">0/0</Text></Cell>
      <Cell><Button onClick="hpDown(m2)">-</Button></Cell>
      <Cell><Button onClick="hpUp(m2)">+</Button></Cell>
    </Row>
    <Row preferredHeight="40">
      <Cell><Text id="yellow-m3-name">M3</Text></Cell>
      <Cell><ProgressBar id="yellow-m3-percentage" percentage="100"></ProgressBar></Cell>
      <Cell><Text id="yellow-m3-hp">0/0</Text></Cell>
      <Cell><Button onClick="hpDown(m3)">-</Button></Cell>
      <Cell><Button onClick="hpUp(m3)">+</Button></Cell>
    </Row>
    <Row preferredHeight="40">
      <Cell><Text>Deck</Text></Cell>
      <Cell><ProgressBar id="yellow-cards-percentage" percentage="0" fillImageColor="#003c00"></ProgressBar></Cell>
      <Cell><Text id="yellow-cards-value">0/50</Text></Cell>
    </Row>
  </TableLayout>
  <TableLayout height="0" width="260" columnWidths="60 140 50" rectAlignment="MiddleRight" allowDragging="true" returnToOriginalPositionWhenReleased="false" offsetXY="5 210">
    <Row preferredHeight="35">
      <Cell></Cell>
      <Cell><Text id="yellow-enemy-team-name">Enemy Team</Text></Cell>
      <Cell><Text id="yellow-enemy-team-guts">0</Text></Cell>
    </Row>
    <Row preferredHeight="40">
      <Cell><Text id="yellow-enemy-m1-name">M1</Text></Cell>
      <Cell><ProgressBar id="yellow-enemy-m1-percentage" percentage="100"></ProgressBar></Cell>
      <Cell><Text id="yellow-enemy-m1-hp">0/0</Text></Cell>
