<TableLayout rectAlignment="UpperCenter" offsetXY="0 -180" height="30" width="520" columnWidths="80 120 270 50">
    <Row id="AddBarMenu_1" preferredHeight="30">
        <Cell>
            <Text>
                Bar #
            </Text>
        </Cell>
        <Cell>
            <Text>
                Color
            </Text>
        </Cell>
        <Cell>
            <Text>
                Name of Player or NPC
            </Text>
        </Cell>
    </Row>
    <Row id="AddBarMenu_2" preferredHeight="30">
        <Cell>
            <Dropdown id="BarNumber" onValueChanged="b9e9f9/BarNumberSelected">
                <Option selected="true">1</Option>
                <Option>2</Option>
                <Option>3</Option>
                <Option>4</Option>
                <Option>5</Option>
                <Option>6</Option>
                <Option>7</Option>
                <Option>8</Option>
                <Option>9</Option>
                <Option>10</Option>
            </Dropdown>
        </Cell>
        <Cell>
            <Dropdown id="BarColor" onValueChanged="b9e9f9/BarColorSelected">
                <Option selected="true">White</Option>
                <Option>Blue</Option>
                <Option>Red</Option>
                <Option>Green</Option>
                <Option>Yellow</Option>
                <Option>Orange</Option>
                <Option>Purple</Option>
                <Option>Pink</Option>
                <Option>Brown</Option>
                <Option>Grey</Option>
                <Option>Black</Option>
            </Dropdown>
        </Cell>
        <Cell>
            <InputField id="BarName" onValueChanged="b9e9f9/BarNameSelected">Name</InputField>
        </Cell>
        <Cell>
            <Button onClick="b9e9f9/CreateBar" class="hpUp">+</Button>
        </Cell>
    </Row>
</TableLayout>
