<!-- Xml UI. See documentation: https://api.tabletopsimulator.com/ui/introUI/ -->
<Defaults>
    <ProgressBar fillImageColor="#FFFFFF" textOutline="#FFFFFF" fontStyle="bold" percentageTextFormat="0"/>
    <Button fontStyle="bold" fontSize="20"/>
    <Button class="hpUp" color="#FFFFFF"/>
    <Button class="hpDown" color="#FFFFFF"/>
    <Row dontUseTableRowBackground="true" visibility="false"/>
    <Cell dontUseTableCellBackground="true"/>
    <Text color="white" outline="black" fontStyle="bold" fontSize="15"/>
</Defaults>

